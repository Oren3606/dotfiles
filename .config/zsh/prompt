# Prompt components and colors (https://en.wikipedia.org/wiki/ANSI_escape_code#8-bit)
#transient_element=$'\e[2A\e[K\b\e[3~\e[2B' # TODO...
username=$'\e[38;5;2m%n\e[0m'
at=$'\e[38;5;2m@\e[0m'
hostname=$'\e[38;5;2m%m\e[0m'
time=$'\e[38;5;1m%D{%H:%M}\e[0m'
directory=$'\e[38;5;4m%~\e[0m'
privileges=$'\e[38;5;15m$\e[0m'
newline=$'\n'

# Combine
PROMPT="${transient_element}${username}${at}${hostname} ${time} ${directory}${newline}${privileges} ${%f%k}"

# Export $PROMPT variable
export PROMPT
